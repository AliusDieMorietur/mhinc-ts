{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "incremental": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts", "./src/**/*.js", "./test/**/*.ts", "./test/**/*.js"],
  "exclude": ["node_modules", ".eslintrc.js", "dist"],
  "ts-node": {
    "experimentalResolver": true
  }
}
